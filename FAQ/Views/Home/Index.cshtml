@model FAQ.Models.FaqViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col-md-3">
        <h4>Topics</h4>
        <div class="list-group">
            <a href="@Url.Action("Index")" class="list-group-item">All FAQs</a>
            @foreach (var topic in Model.Topics)
            {
                <a href="@Url.Action("Index", new { topic = topic.Name })" class="list-group-item">@topic.Name</a>
            }
        </div>
    </div>
    <div class="col-md-9">
        <h2>Frequently Asked Questions</h2>

        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index")">All FAQs</a>
                    </li>
                    @foreach (var category in Model.Categories)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", new { category = category.Name })">@category.Name</a>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <div>
            @foreach (var question in Model.Questions)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@question.QuestionText</h5>
                        <p class="card-text">@question.Answer</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>